<div class="page-header">
	<h1>All Rides</h1>

<% @recents.each do |recent| %>
<div class="recents">
	<strong>Date: <%= recent.Date %></strong>
	<div>Distance: <%= recent.distance%></div>
	<div class="meta"> 
		<%= link_to 'Show Details', recent %>
	</div>

</div>
<% end %>


<table class="table">
  <thead>
    <tr>
      
      <th>Date</th>
      <th>Route</th>
      <th>Time</th>
      <th>Distance</th>
      <th>Av.Speed</th>
      <th>Fastest</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recents.each do |recent| %>
      <tr>
        
        <td><%= recent.Date %></td>
        <td><%= recent.route %></td>
        <td><%= recent.time %></td>
        <td><%= recent.distance %></td>
        <td><%= recent.average %></td>
        <td><%= recent.fastest %></td>
        <td><%= recent.notes %></td>
        <td><%= link_to 'Show', recent %></td>
        <td><%= link_to 'Edit', edit_recent_path(recent) %></td>
        <td><%= link_to 'Destroy', recent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recent', new_recent_path %>
